<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>CSPGuardian</RootNamespace>
    <AssemblyName>cspguard</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>CSPGuardian Contributors</Authors>
    <Description>A CLI tool to automate detection, cleanup, and CSP policy generation for inline scripts and CSS</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/kamakauzy/CSPGuardian.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.11.61" />
    <PackageReference Include="System.CommandLine" Version="2.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

</Project>

